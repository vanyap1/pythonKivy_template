<BottomBar@BoxLayout>:
    size_hint_y: None
    height: 80
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.2  # Білий колір з прозорістю 80%
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size_hint_x: None
        width: 170  # Ширина кнопки + 10 пікселів
        padding: [10, 0, 0, 0]  # Зміщення на 10 пікселів правіше
        spacing: 10
        Button:
            text: 'Button'
            size_hint: None, None
            size: 160, 70
            pos_hint: {'center_y': 0.5}
            on_release: root.show_menu()
        
        Button:
            text: 'Button'
            size_hint: None, None
            size: 160, 70
            pos_hint: {'center_y': 0.5}
            on_release: root.show_menu()

    Widget:
        size_hint_x: 1  # Динамічна ширина

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        width: 2
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1  # Чорний колір
            Rectangle:
                pos: self.pos
                size: self.size

    Label:
        text: 'Some Text'
        size_hint_x: None
        width: 200
        valign: 'middle'
        halign: 'center'
        text_size: self.size
        pos_hint: {'center_y': 0.5}